{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2022", "DOM"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "typeRoots": ["./node_modules/@types", "./types"],
    "paths": {
      "@epub-reader/core": ["packages/core/src"],
      "@epub-reader/core/*": ["packages/core/src/*"],
      "@epub-reader/ui": ["packages/ui/src"],
      "@epub-reader/ui/*": ["packages/ui/src/*"],
      "@epub-reader/web-adapter": ["packages/web-adapter/src"],
      "@epub-reader/web-adapter/*": ["packages/web-adapter/src/*"],
      "@epub-reader/tauri-adapter": ["packages/tauri-adapter/src"],
      "@epub-reader/tauri-adapter/*": ["packages/tauri-adapter/src/*"]
    }
  }
}
